{
  "version": "0.2.0",
  "configurations": [
    {
      // for debugging vscode-jest extension. It's not used for now, but maybe
      // will helpful for others
      "type": "node",
      "request": "launch",
      "name": "vscode-jest-tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["-i"],
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": ["${workspaceRoot}/dist/**/*"]
    }
  ]
}
